<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/MyerListBlue</item>
        <item name="colorPrimaryDark">@color/MyerListBlueDark</item>
        <item name="colorAccent">@color/MyerListBlue</item>
        <item name="android:windowAnimationStyle">@style/activityAnim</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTrans" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/fadeAnim</item>
    </style>

    <style name="AppTransStill" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/fadeAnim2</item>
    </style>

    <style name="AppSplashTheme" parent="AppNoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="fadeAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_in</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_out</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="fadeAnim2" parent="@android:style/Animation.Activity">
        <item name="android:activityCloseEnterAnimation">@anim/fade_out</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="activityAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_from_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_from_right</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="AboutTitle">
        <item name="android:textColor">@color/MyerListBlue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
</resources>
